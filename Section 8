#include <iostream>
#include <vector>
#include <cctype>
#include <cstring>
#include <string>

using namespace std;

int main() {

int selection{0};


size_t number_of_branches{0};
        
vector <int> branches_data;
vector <int> new_branches_data;
int input{};       
string whitespace (" ", 2);
        
    do{
                
    cout << "\n1. Enter sales data"<<endl;
    cout<<"2. Add a record for a new branch"<<endl;
    cout<<"3. Delete record of an existing branch"<<endl;
    cout<<"4. Calculate total sales"<<endl;
    cout<<"5. Calculate percentage share of each branch"<<endl;
    cout<<"6. Determine the month of peak sales"<<endl;
    cout<<"7. Display sales of a specific month"<<endl;
    cout<<"8. Display sales of specific branch"<<endl;
    cout<<"0. Done"<<endl;
    cout <<"\nPlease what is your selection : ";
         cin >> selection;
         
         if(selection == 1){       
                cout << "enter number of branches : ";
                cin >> number_of_branches;
               
                cout <<endl<<endl;
                
    for(size_t a{1} ; a <= number_of_branches ; ++a )
    {
                cout <<"sales for branch "<< a<<" "<<endl;
                        for(size_t x{0} ; x < 12 ; ++x)
                        {
                            cout<<"sales for month "<<x+1<<" :  ";
                            cin >> input ;
                            branches_data.push_back(input);
                            cout<<endl;
                        }
              
    }
                  
             cout<<"Branch\\Month: ";
             for (size_t i{1} ; i < 13 ; ++i )
             cout<<whitespace<<" "<< i;
             
             cout <<endl;
             cout <<"Branch     1:  ";
             for (auto vec: branches_data)
                 cout<<whitespace<<vec;
         }
         
    if(selection == 2)
    {
        for ( size_t x{} ; x < 12 ; ++x)
            {
                cout<<"sales for month "<<x+1<<" :  ";
                cin >> input ;
                branches_data.push_back(input);
                cout<<endl;
            }
    
                cout<<"Branch\\Month: ";
                for (size_t z{1} ; z < 13 ; ++z )
                cout<<whitespace<<" "<< z;
             
                cout <<endl;
                cout <<"Branch     1:  ";
                for (auto vec2: branches_data)
                    cout<<whitespace<<vec2;
        
    }
    if(selection == 3)
    {
        int deleted{};
        int new_vector_size{};
        cout<<"Please type Branch number that you want to delete : ";
        cin >> deleted;
        int starting_point_of_deleted_vector = {(deleted * 12)-12};      //zero
        new_vector_size = branches_data.size() - 12 ;                           //24
        
        for (int v{} ; v < new_vector_size ; ++v)
        {
            if (v < starting_point_of_deleted_vector && v != starting_point_of_deleted_vector)
                new_branches_data.push_back(branches_data.at(v));
        
            if (v == starting_point_of_deleted_vector)
            {
                    for (int y{},t{v} ; y < new_vector_size;++y,++t)
                        new_branches_data.push_back(branches_data.at(t+12));  
                
                
            }
        
        }
        
        
        cout<<"Branch\\Month: ";
                for (size_t z{1} ; z < 13 ; ++z )
                cout<<whitespace<<" "<< z;
                cout <<endl;
                cout <<"Branch     1:  ";
                for (auto vec2: new_branches_data)
                    cout<<whitespace<<vec2;  
    }    
         
    
    
    



   
}while (selection != 0 );  
    
    
    

    return 0;
}
    

